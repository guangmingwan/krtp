      <text>{{title}}</text>  
</view>
<view class="container">
  
  <button type="default" size="{{defaultSize}}" loading="{{loading}}" plain="{{plain}}"
        disabled="{{disabled}}" bindtap="gotoPost"  data-post-type="0"  hover-class="other-button-hover"> 原料发布 </button>

  <button type="default" size="{{defaultSize}}" loading="{{loading}}" plain="{{plain}}"
        disabled="{{disabled}}" bindtap="gotoPost"  data-post-type="1"  hover-class="other-button-hover"> 余胚发布 </button>
  
</view>
