<!--pages/index/search/search.wxml-->
<view class="title">
      <text>{{sub_title}}</text>  
  </view>
<view class="container">

<block wx:if="{{postType == 0}}">
<view class="film-item">
  <view class="film-image">
  <text>供应商编号：</text>
  </view>
  <view class="film-info">
  <input  class="inpupt_withbottomline" maxlength="10" placeholder="输入供应商编号" />
  </view>
</view>
<view class="film-item">
  <view class="film-image">
  <text>供应商名称：</text>
  </view>
  <view class="film-info">
  <input  class="inpupt_withbottomline" maxlength="10" placeholder="输入供应商名称" />
  </view>
</view>
<view class="film-item">
  <view class="film-image">
  <text>联系人姓名：</text>
  </view>
  <view class="film-info">
  <input  class="inpupt_withbottomline" maxlength="10" placeholder="输入联系人姓名" />
  </view>
</view>
<view class="film-item">
  <view class="film-image">
  <text>联系人电话：</text>
  </view>
  <view class="film-info">
  <input  class="inpupt_withbottomline" maxlength="10" placeholder="输入联系人电话" />
  </view>
</view>
<view class="film-item">
