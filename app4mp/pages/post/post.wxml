</view>
<view class="film-item">
  <button type="default" size="{{defaultSize}}" loading="{{loading}}" plain="{{plain}}"
        disabled="{{disabled}}" bindtap="search" hover-class="other-button-hover"><icon type="search" size="15"/> 确定 </button>
        <button type="default" size="{{defaultSize}}" loading="{{loading}}" plain="{{plain}}"
        disabled="{{disabled}}" bindtap="reset" hover-class="other-button-hover"><icon type="cancel" size="15"/> 取消|清除条件 </button>
  </view>

</block>
</view>
