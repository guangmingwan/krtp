  <view class="film-image">
  <text>批号／缸号：</text>
  </view>
  <view class="film-info">
  <input  class="inpupt_withbottomline" maxlength="10" placeholder="输入批号／缸号" />
  </view>
</view>
<view class="film-item">
  <view class="film-image">
  <text>生产日期：</text>
  </view>
  <view class="film-info">
  <input class="inpupt_withbottomline"  maxlength="10" placeholder="生产日期" />
  </view>
</view>
<view class="film-item">
  <view class="film-image">
  <text>库存件数量：</text>
  </view>
  <view class="film-info">
