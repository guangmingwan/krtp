  <view class="film-image">
  <text>库存数量：</text>
  </view>
  <view class="film-info">
  <input  class="inpupt_withbottomline" maxlength="10" placeholder="公斤" />
  </view>
</view>
<view class="film-item">
  <view class="film-image">
  <text>销售单价：</text>
  </view>
  <view class="film-info">
  <input  class="inpupt_withbottomline" maxlength="10" placeholder="元／公斤（不含税）" />
  </view>
</view>
<view class="film-item">
  <view class="film-image">
  <text>备注：</text>
  </view>
  <view class="film-info">
  <input  class="inpupt_withbottomline" maxlength="10" placeholder="输入备注" />
  </view>
</view>
<view class="film-item">
  <button type="default" size="{{defaultSize}}" loading="{{loading}}" plain="{{plain}}"
        disabled="{{disabled}}" bindtap="search" hover-class="other-button-hover"><icon type="search" size="15"/> 确定 </button>
        <button type="default" size="{{defaultSize}}" loading="{{loading}}" plain="{{plain}}"
        disabled="{{disabled}}" bindtap="reset" hover-class="other-button-hover"><icon type="cancel" size="15"/> 取消|清除条件 </button>
  </view>
</block>
